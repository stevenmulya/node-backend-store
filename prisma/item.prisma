model Item {
  id               String    @id @default(uuid())
  itemTypeId       Int       @map("item_type_id")
  itemCategoryId   String    @map("item_category_id")
  name             String    @db.VarChar(255)
  slug             String    @unique @db.VarChar(255)
  description      String?   @db.Text
  shortDescription String?   @map("short_description") @db.VarChar(500)
  tags             String?   @db.Text
  attributes       Json?     @db.Json
  metaTitle        String?   @map("meta_title") @db.VarChar(255)
  metaDescription  String?   @map("meta_description") @db.VarChar(500)
  status           ItemStatus @default(DRAFT)
  isPinned         Boolean   @default(false) @map("is_pinned")
  isFavorite       Boolean   @default(false) @map("is_favorite")
  createdBy        String?   @map("created_by") @db.VarChar(100)
  updatedBy        String?   @map("updated_by") @db.VarChar(100)
  deletedBy        String?   @map("deleted_by") @db.VarChar(100)
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  deletedAt        DateTime? @map("deleted_at")

  itemType         ItemType     @relation(fields: [itemTypeId], references: [id])
  category         ItemCategory @relation(fields: [itemCategoryId], references: [id])
  variants         ItemVariant[]
  images           ItemImage[]
  videos           ItemVideo[]
  updateHistories  ItemUpdateHistory[]

  @@map("items")
  @@index([itemTypeId])
  @@index([itemCategoryId])
  @@index([slug])
  @@index([status])
  @@index([deletedAt])
}

enum ItemStatus {
  DRAFT
  ACTIVE
  ARCHIVED
  SUSPENDED
}