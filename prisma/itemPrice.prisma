model ItemPrice {
  id            String      @id @default(uuid())
  itemVariantId String      @map("item_variant_id")
  price         Decimal     @db.Decimal(19, 2)
  priceType     PriceType   @default(ONCE) @map("price_type")
  startDate     DateTime?   @map("start_date")
  endDate       DateTime?   @map("end_date")
  dayOfWeek     Int?        @map("day_of_week")
  startTime     String?     @map("start_time") @db.VarChar(10)
  endTime       String?     @map("end_time") @db.VarChar(10)
  createdBy     String?     @map("created_by") @db.VarChar(100)
  updatedBy     String?     @map("updated_by") @db.VarChar(100)
  deletedBy     String?     @map("deleted_by") @db.VarChar(100)
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  deletedAt     DateTime?   @map("deleted_at")

  variant       ItemVariant @relation(fields: [itemVariantId], references: [id], onDelete: Cascade)

  @@map("item_prices")
  @@index([itemVariantId])
}

enum PriceType {
  ONCE
  WEEKLY
  DAILY
}