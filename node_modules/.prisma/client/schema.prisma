model CustomerFormField {
  id         Int       @id @default(autoincrement())
  label      String    @db.VarChar(255)
  fieldKey   String    @unique @map("field_key") @db.VarChar(100)
  type       FieldType @default(TEXT)
  options    Json?     @db.Json
  isRequired Boolean   @default(false) @map("is_required")
  isActive   Boolean   @default(true) @map("is_active")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  responses CustomerResponse[]

  @@map("customer_form_fields")
}

enum FieldType {
  TEXT
  NUMBER
  OPTION
}

model CustomerResponse {
  id             Int      @id @default(autoincrement())
  userCustomerId Int      @map("user_customer_id")
  fieldId        Int      @map("field_id")
  answer         String   @db.Text
  createdAt      DateTime @default(now()) @map("created_at")

  customer UserCustomer      @relation(fields: [userCustomerId], references: [id], onDelete: Cascade)
  field    CustomerFormField @relation(fields: [fieldId], references: [id], onDelete: Cascade)

  @@index([userCustomerId])
  @@index([fieldId])
  @@map("customer_responses")
}

model Item {
  id               BigInt     @id @default(autoincrement())
  itemTypeId       Int        @map("item_type_id")
  itemCategoryId   Int        @map("item_category_id")
  name             String     @db.VarChar(255)
  slug             String     @unique @db.VarChar(255)
  description      String?    @db.Text
  shortDescription String?    @map("short_description") @db.VarChar(500)
  tags             String?    @db.Text
  attributes       Json?      @db.Json
  metaTitle        String?    @map("meta_title") @db.VarChar(255)
  metaDescription  String?    @map("meta_description") @db.VarChar(500)
  status           ItemStatus @default(DRAFT)
  isPinned         Boolean    @default(false) @map("is_pinned")
  isFavorite       Boolean    @default(false) @map("is_favorite")
  isDeleted        Boolean    @default(false) @map("is_deleted")
  createdBy        Int?       @map("created_by")
  updatedBy        Int?       @map("updated_by")
  deletedBy        Int?       @map("deleted_by")
  createdAt        DateTime   @default(now()) @map("created_at")
  updatedAt        DateTime   @updatedAt @map("updated_at")
  deletedAt        DateTime?  @map("deleted_at")

  itemType        ItemType            @relation(fields: [itemTypeId], references: [id])
  category        ItemCategory        @relation(fields: [itemCategoryId], references: [id])
  variants        ItemVariant[]
  images          ItemImage[]
  videos          ItemVideo[]
  updateHistories ItemUpdateHistory[]

  @@index([itemTypeId])
  @@index([itemCategoryId])
  @@index([slug])
  @@index([status])
  @@map("items")
}

enum ItemStatus {
  DRAFT
  ACTIVE
  ARCHIVED
  SUSPENDED
}

model ItemAttributeTemplate {
  id             Int           @id @default(autoincrement())
  itemCategoryId Int           @map("item_category_id")
  name           String        @db.VarChar(100)
  type           AttributeType @default(TEXT)
  createdBy      Int?          @map("created_by")
  updatedBy      Int?          @map("updated_by")
  deletedBy      Int?          @map("deleted_by")
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")
  deletedAt      DateTime?     @map("deleted_at")

  category ItemCategory @relation(fields: [itemCategoryId], references: [id])

  @@index([itemCategoryId])
  @@map("item_attribute_templates")
}

enum AttributeType {
  TEXT
  NUMBER
  COLOR
}

model ItemCategory {
  id        Int       @id @default(autoincrement())
  parentId  Int?      @map("parent_id")
  name      String    @db.VarChar(100)
  createdBy Int?      @map("created_by")
  updatedBy Int?      @map("updated_by")
  deletedBy Int?      @map("deleted_by")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  parent             ItemCategory?           @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children           ItemCategory[]          @relation("CategoryHierarchy")
  items              Item[]
  attributeTemplates ItemAttributeTemplate[]

  @@index([parentId])
  @@map("item_categories")
}

model ItemImage {
  id        BigInt    @id @default(autoincrement())
  itemId    BigInt    @map("item_id")
  url       String    @db.VarChar(255)
  isPrimary Boolean   @default(false) @map("is_primary")
  sortOrder Int       @default(0) @map("sort_order")
  createdBy Int?      @map("created_by")
  updatedBy Int?      @map("updated_by")
  deletedBy Int?      @map("deleted_by")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([itemId])
  @@map("item_images")
}

model ItemPrice {
  id            BigInt    @id @default(autoincrement())
  itemVariantId BigInt    @map("item_variant_id")
  price         Decimal   @db.Decimal(19, 2)
  priceType     PriceType @default(ONCE) @map("price_type")
  startDate     DateTime? @map("start_date")
  endDate       DateTime? @map("end_date")
  dayOfWeek     Int?      @map("day_of_week")
  startTime     String?   @map("start_time") @db.VarChar(10)
  endTime       String?   @map("end_time") @db.VarChar(10)
  createdBy     Int?      @map("created_by")
  updatedBy     Int?      @map("updated_by")
  deletedBy     Int?      @map("deleted_by")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  deletedAt     DateTime? @map("deleted_at")

  variant ItemVariant @relation(fields: [itemVariantId], references: [id], onDelete: Cascade)

  @@index([itemVariantId])
  @@map("item_prices")
}

enum PriceType {
  ONCE
  WEEKLY
  DAILY
}

model ItemType {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(50)
  description String?   @db.VarChar(255)
  createdBy   Int?      @map("created_by")
  updatedBy   Int?      @map("updated_by")
  deletedBy   Int?      @map("deleted_by")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  items Item[]

  @@map("item_types")
}

model ItemUpdateHistory {
  id         BigInt   @id @default(autoincrement())
  itemId     BigInt   @map("item_id")
  itemName   String   @map("item_name") @db.VarChar(255)
  userId     Int      @map("user_id")
  userName   String   @map("user_name") @db.VarChar(255)
  columnName String   @map("column_name") @db.VarChar(100)
  createdAt  DateTime @default(now()) @map("created_at")

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([itemId])
  @@index([userId])
  @@map("item_update_histories")
}

model ItemVariant {
  id        BigInt    @id @default(autoincrement())
  itemId    BigInt    @map("item_id")
  code      String    @unique @db.VarChar(100)
  name      String?   @db.VarChar(100)
  imageUrl  String?   @map("image_url") @db.VarChar(255)
  price     Decimal   @default(0) @db.Decimal(19, 2)
  quantity  Int       @default(0)
  options   Json?     @db.Json
  isActive  Boolean   @default(true) @map("is_active")
  createdBy Int?      @map("created_by")
  updatedBy Int?      @map("updated_by")
  deletedBy Int?      @map("deleted_by")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  item   Item        @relation(fields: [itemId], references: [id], onDelete: Cascade)
  prices ItemPrice[]

  @@index([itemId])
  @@index([code])
  @@map("item_variants")
}

model ItemVideo {
  id        BigInt    @id @default(autoincrement())
  itemId    BigInt    @map("item_id")
  url       String    @db.VarChar(255)
  provider  String?   @db.VarChar(50)
  isPrimary Boolean   @default(false) @map("is_primary")
  sortOrder Int       @default(0) @map("sort_order")
  createdBy Int?      @map("created_by")
  updatedBy Int?      @map("updated_by")
  deletedBy Int?      @map("deleted_by")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([itemId])
  @@map("item_videos")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"] // WAJIB ada di sini
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique @db.VarChar(50)
  email     String    @unique @db.VarChar(100)
  password  String    @db.VarChar(255)
  role      UserRole  @default(CUSTOMER)
  isActive  Boolean   @default(true) @map("is_active")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  adminProfile    UserAdmin?
  customerProfile UserCustomer?

  @@map("users")
}

enum UserRole {
  OWNER
  MANAGER
  STAFF
  CUSTOMER
}

model UserAdmin {
  id          Int       @id @default(autoincrement())
  userId      Int       @unique @map("user_id")
  fullName    String    @map("full_name") @db.VarChar(100)
  employeeId  String?   @unique @map("employee_id") @db.VarChar(50)
  department  String?   @db.VarChar(100)
  phoneNumber String?   @map("phone_number") @db.VarChar(20)
  accessLevel Int       @default(1) @map("access_level")
  lastLoginAt DateTime? @map("last_login_at")
  lastLoginIp String?   @map("last_login_ip") @db.VarChar(45)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_admins")
}

model UserCustomer {
  id           Int       @id @default(autoincrement())
  userId       Int       @unique @map("user_id")
  fullName     String    @map("full_name") @db.VarChar(100)
  phoneNumber  String?   @map("phone_number") @db.VarChar(20)
  birthDate    DateTime? @map("birth_date")
  loyaltyPoint Int       @default(0) @map("loyalty_point")
  referralCode String?   @unique @map("referral_code") @db.VarChar(20)
  isVerified   Boolean   @default(false) @map("is_verified")
  verifiedAt   DateTime? @map("verified_at")

  user      User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  addresses UserCustomerAddress[]
  member    UserMember?
  responses CustomerResponse[]

  @@map("user_customers")
}

model UserCustomerAddress {
  id             Int     @id @default(autoincrement())
  userCustomerId Int     @map("user_customer_id")
  label          String  @db.VarChar(50)
  recipientName  String  @map("recipient_name") @db.VarChar(100)
  recipientPhone String  @map("recipient_phone") @db.VarChar(20)
  fullAddress    String  @map("full_address") @db.Text
  note           String? @db.VarChar(255)
  isPrimary      Boolean @default(false) @map("is_primary")

  customer UserCustomer @relation(fields: [userCustomerId], references: [id], onDelete: Cascade)

  @@index([userCustomerId])
  @@map("user_customer_addresses")
}

model UserMember {
  id             Int        @id @default(autoincrement())
  userCustomerId Int        @unique @map("user_customer_id")
  tier           MemberTier @default(BRONZE)
  memberNumber   String     @unique @map("member_number") @db.VarChar(50)
  joinedAt       DateTime   @default(now()) @map("joined_at")
  expiredAt      DateTime?  @map("expired_at")

  customer UserCustomer @relation(fields: [userCustomerId], references: [id], onDelete: Cascade)

  @@map("user_members")
}

enum MemberTier {
  BRONZE
  SILVER
  GOLD
  PLATINUM
}
